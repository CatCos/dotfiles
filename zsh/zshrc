# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Prompt based on the Solarized Light theme.
# Use 13pt Monaco for Powerline.
ZSH_THEME="rap"

ZSH_CUSTOM=$HOME/.dotfiles/zsh

# zsh-syntax-highlighting must be the last plugin in the array
plugins=(gitfast bundler history-substring-search zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# Load configuration files
for zsh_source in $HOME/repos/dotfiles/zsh/config/*.zsh; do
  source $zsh_source
done

# Solarized dircolors for GNOME ls
eval `dircolors $HOME/.dircolors`

# If zshrc.local exists, load it.
[[ -f ~/.zshrc.local ]] && source ~/.zshrc.local

[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh

# Must be sourced at the end of this file.
# NOTE: Documentation states that using oh-my-zsh it's only required to add the
# plugin as the last entry in the plugins array. In order to get this to work,
# I've also sourced the plugin. When I get the time, I have to further
# investigate this. See the docs at
# https://github.com/zsh-users/zsh-syntax-highlighting#with-oh-my-zsh
source ~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
