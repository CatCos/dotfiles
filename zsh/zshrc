# Load configuration files
for file ($DOTFILES/zsh/config/*.zsh(N)); do
  source $file
done

# Load modules files
for file ($DOTFILES/zsh/modules/*.zsh(N)); do
  source $file
done

unset file

[[ -f ~/.zshrc.local ]] && source ~/.zshrc.local
[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh
[[ -f ~/.travis/travis.sh ]] && source ~/.travis/travis.sh

# Load *external* ZSH modules from the $DOTFILES/zsh/modules directory
# TODO: think of a better way to do this. Ideally, I could do something like
# what prezto does.
source $ZSH_MODULES_DIR/history-substring-search/zsh-history-substring-search.zsh
source $ZSH_MODULES_DIR/syntax-highlighting/zsh-syntax-highlighting.zsh
