[alias]
  lg = g log --abbrev-commit --date=relative --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
  gsb = gss --branch

[core]
  autocrlf = input

[commit]
  template = ~/repos/dotfiles/gitmessage.txt

[fetch]
  prune = true

[include]
  path = ~/.dotfiles.local/gitconfig.local

[push]
  default = current
