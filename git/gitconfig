[alias]
  lg = g log --abbrev-commit --date=relative --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
  gsb = gss --branch

[core]
  autocrlf = input
  pager = diff-highlight | less -r

[commit]
  template = ~/repos/dotfiles/git/gitmessage.txt

[fetch]
  prune = true

[include]
  path = ~/.gitconfig.local

[push]
  default = current
